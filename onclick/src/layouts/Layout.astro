---
// Importaciones Astro
import Home from "../components/home.astro";
import About from "../components/about.astro";
import FraseUno from "../components/fraseUno.astro";
import FraseDos from "../components/fraseDos.astro";
import Hacemos from "../components/hacemos.astro";
import Impacto from "../components/impacto.astro";
import Fondoimg from "../components/fondoImagen.astro";
import Galeria from "../components/galeria.astro";
import Planes from "../components/planes.astro";
import Nosotros from "../components/nosotros.astro";
import Hablemos from "../components/hablemos.astro";
import Footer from "../components/footer.astro";

import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>ONCLICK</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body>
    <!-- Sección con fondo -->
    <section
      class="relative h-screen min-h-[600px] flex items-center justify-center px-6 md:px-12 overflow-hidden" id="inicio"
    >
      <img
        src="/assets/principal/fondo.png"
        alt="fondo"
        class="absolute inset-0 w-full h-full object-cover brightness-75 -z-10 pointer-events-none"
      />

      <div class="w-full max-w-7xl mx-auto">
        <Home />
        <About />
      </div>
    </section>

    <!-- Sección Frase -->
    <section>
      <FraseUno />
    </section>

    <section id="servicios">
      <Hacemos />
    </section>

    <section>
      <Fondoimg />
    </section>

    <section id="experiencia">
      <Impacto />
    </section>

    <section>
      <FraseDos />
    </section>

    <section id="galeria">
      <Galeria />
    </section>

    <section id="paquetes">
      <Planes />
    </section>

    <section id="nosotros">
      <Nosotros />
    </section>

    <section id="contacto">
      <Hablemos />
    </section>

    <section>
      <Footer />
    </section>
  </body>
</html>

<style>
  html,
  body {
    scroll-behavior: smooth;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>


