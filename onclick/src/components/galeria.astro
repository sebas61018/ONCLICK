  </div>
</section>


<!-- Modal Lightbox -->
<div id="lightbox" class="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center z-50 hidden">
  <button onclick="closeLightbox()" class="absolute top-6 right-6 text-white text-4xl font-bold z-50">&times;</button>
  <img id="lightbox-img" src="" class="max-w-[90%] max-h-[80vh] object-contain rounded-lg shadow-xl border-4 border-white" />
</div>

<!-- Script Lightbox -->
<script is:inline>
  function openLightbox(src) {
    const img = document.getElementById("lightbox-img");
    const lightbox = document.getElementById("lightbox");

    if (img && lightbox) {
      img.src = src;
      lightbox.classList.remove("hidden");
    }
  }

  function closeLightbox() {
    const img = document.getElementById("lightbox-img");
    const lightbox = document.getElementById("lightbox");

    if (img && lightbox) {
      lightbox.classList.add("hidden");
      img.src = "";
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    const lightbox = document.getElementById("lightbox");
    if (lightbox) {
      lightbox.addEventListener("click", function (e) {
        const target = e.target;
        if (target && target.id === "lightbox") {
          closeLightbox();
        }
      });
    }
  });
</script>
